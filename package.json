{
  "name": "shimmer-from-structure",
  "version": "2.0.0",
  "private": true,
  "description": "Universal UI skeleton generator for React, Vue and Svelte. Auto-adapts to your component structure with zero maintenance and pixel-perfect accuracy.",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:react && npm run build:vue && npm run build:svelte && npm run build:main",
    "build:core": "npm run build -w @shimmer-from-structure/core",
    "build:react": "npm run build -w @shimmer-from-structure/react",
    "build:vue": "npm run build -w @shimmer-from-structure/vue",
    "build:svelte": "npm run build -w @shimmer-from-structure/svelte",
    "build:main": "npm run build -w shimmer-from-structure",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present -- --run",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "vue",
    "svelte",
    "shimmer",
    "skeleton",
    "loading",
    "placeholder",
    "runtime"
  ],
  "author": "Olebogeng Mbedzi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darula-hpp/shimmer-from-structure.git"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.1",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17",
    "vue": "^3.5.13"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@vue/test-utils": "^2.4.6",
    "eslint-plugin-vue": "^10.7.0"
  }
}
